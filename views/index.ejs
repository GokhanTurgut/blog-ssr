<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/index.css">
</head>
<%- include('./includes/navigation.ejs') %>
  <main>
      <h1 class="main--header">Recent Posts</h1>
      <div class="posts--container">
        <% if (!posts.length) { %>
          <h2>No posts yet!</h2>
        <% } else { %>
          <% posts.forEach(post => { %>
            <div class="post--card">
              <div class="post--image__container">
                <img src="<%= post.imageURL %>" alt="<%= post.description %>">
              </div>
              <h3><%= post.title %></h3>
              <p><%= post.description %></p>
              <small>Posted at <%= post.createdAt.toLocaleDateString() %></small>
              <h5>By <%= post.creator %></h5>
              <form action="/post/<%= post._id.toString()%>" method="GET">
                <button class="btn" type="submit">Read</button>
              </form>
            </div>
          <% })} %>
      </div>
  </main>
<%- include('./includes/footer.ejs') %>

