<%- include('../includes/navigation.ejs') %>
  <main>
      <h1>Add Post</h1>
      <form action="/addPost" method="POST" class="form">
        <div class="form-control">
          <label for="title">Title</label>
          <input 
              type="text" 
              name="title" 
              id="title"
              required
          >
        </div>
        <div class="form-control">
          <label for="content">Content</label>
          <textarea 
              name="content" 
              id="content"
              rows="20"
              cols="50"
              required
          ></textarea>
        </div>
      <button class="btn" type="submit">Save</button>
      </form>
  </main>
